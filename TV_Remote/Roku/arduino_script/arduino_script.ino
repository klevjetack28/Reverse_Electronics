    }
}

int matrix_pressed()
{
  int result = -1;
    for (int i = 0; i < ROWS; i++)
    {
         digitalWrite(rowPins[i], LOW);
         for (int j = 0; j < COLS; j++)
         {
                if (digitalRead(colPins[j]) == LOW)
